{
  "name": "Quick & Exact",
  "description": "It helps look up information quickly and exactly",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Stav team",
  "icons": {
    "48": "images/smart_48.png",
    "128": "images/smart_128.png"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "unlimitedStorage",
    "commands",
    "history"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "open Q&E search",
    },
    "usefull-tab": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "mark active url to useful",
      "action": {},
      "comment": "TODO: check used short keys https://developer.chrome.com/docs/extensions/reference/commands/#verify-commands-registered"
    },
    "trace-search": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "begin or end trace search",
      "action": {}
    }
  },
  "browser_action": {
    "default_title": "Smartoteka"
  },
  "content_scripts": [
    {
      "matches": [
        "https://google.com/*"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_end",
      "js": [
        "content/content.js"
      ]
    }
  ]
}