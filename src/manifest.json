{
  "name": "Smartoteka",
  "description": "Your own knowledge base",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Tatarkov M",
  "icons": {
    "48": "images/smart_48.png",
    "128": "images/smart_128.png"
  },
  "background": {
    "page": "background/background.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "commands"
  ],
  "commands": {
    "search": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "open shop search",
      "action": {},
      "global": true
    },
    "add-tab-to-session": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Add tab to selected session",
      "action": {},
      "comment": "TODO: check used short keys https://developer.chrome.com/docs/extensions/reference/commands/#verify-commands-registered"
    }
  },
  "browser_action": {
    "default_title": "Smartoteka"
  }
}